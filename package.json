{
  "name": "react-native-bootsplash",
  "version": "7.0.0-beta.0",
  "license": "MIT",
  "description": "Display a bootsplash on your app starts. Hide it when you want.",
  "author": "Mathieu Acthernoene <zoontek@gmail.com>",
  "homepage": "https://github.com/zoontek/react-native-bootsplash",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "types": "dist/typescript/index.d.ts",
  "files": [
    "dist",
    "android",
    "ios",
    "src",
    "!android/build",
    "!android/.cxx",
    "!android/.gradle",
    "!ios/build",
    "!src/addon",
    "RNBootSplash.podspec",
    "app.plugin.js",
    "cli.js",
    "react-native.config.js"
  ],
  "bin": "./cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/zoontek/react-native-bootsplash.git"
  },
  "keywords": [
    "react-native-bootsplash",
    "react-native",
    "boot-splash",
    "bootsplash",
    "boot-screen",
    "bootscreen",
    "splash-screen",
    "splashscreen",
    "launch-screen",
    "launchscreen"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "format": "prettier '**/*' -u -w",
    "lint": "oxlint",
    "typecheck": "tsc --noEmit",
    "build": "yarn clean && bob build && rm -rf dist/*/package.json",
    "prepack": "prettier '**/*' -u -c && yarn lint && yarn typecheck && yarn build && node ../obfuscator"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "dependencies": {
    "@expo/config-plugins": "*",
    "@react-native-community/cli-config-android": "^20.0.0",
    "@react-native-community/cli-config-apple": "^20.0.0",
    "@react-native-community/cli-tools": "^20.0.0",
    "commander": "^14.0.2",
    "detect-indent": "^6.1.0",
    "fs-extra": "^11.3.3",
    "node-html-parser": "^7.0.2",
    "picocolors": "^1.1.1",
    "prettier": "^3.7.4",
    "react-native-is-edge-to-edge": "^1.2.1",
    "sharp": "^0.34.5",
    "ts-dedent": "^2.2.0",
    "xml-formatter": "^3.6.7"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@react-native-community/cli-types": "^20.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.0",
    "@types/semver": "^7.7.1",
    "oxlint": "^1.38.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "react": "19.2.0",
    "react-native": "0.83.1",
    "react-native-builder-bob": "^0.40.17",
    "semver": "^7.7.3",
    "typescript": "^5.9.3"
  },
  "codegenConfig": {
    "name": "RNBootSplashSpec",
    "type": "modules",
    "jsSrcsDir": "./src/specs",
    "android": {
      "javaPackageName": "com.zoontek.rnbootsplash"
    }
  }
}
